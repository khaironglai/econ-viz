{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 600,
  "background": "whitesmoke",
  "data": {
    "url": "https://raw.githubusercontent.com/khaironglai/econ-viz/main/data/le.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Life_expectancy > 0"},
    {"filter": "datum.GDP_per_capita > 0"},
    {"filter": "datum.Year == Year_selection"},
    {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
    {"calculate": "datum.Population / 1000000","as": "Population_in_millions"}
  ],
  "encoding": {
    "x": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP Per Capita (Int$)",
      "scale": {"type": "log", "domain": [400, 160060]},
      "axis": {
        "labelFontSize": 13,
        "titleFontSize": 14,
        "titlePadding": 10
      }
    },
    "y": {
      "field": "Life_expectancy",
      "type": "quantitative",
      "title": "Life Expectancy at Birth (Years)",
      "axis": {"labelFontSize": 13, "titleFontSize": 14, "titlePadding": 10},
      "scale": {"type": "linear", "domain": [40, 90]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "title": "Population ",
          "scale": {
            "type": "threshold",
            "domain": [500000, 50000000, 500000000],
            "range": [50, 100, 250, 400]
          },
          "legend": {
            "orient": "right",
            "labelFontSize": 13,
            "titleFontSize": 14,
            "format": ".1s"
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Continent",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#6cd4c5",
              "#377eb8",
              "#ff7f00",
              "#e41a1c",
              "#6d4b4b",
              "#984ea3" 
            ]
          },
          "legend": {
            "orient": "top",
            "labelFontSize": 13,
            "titleFontSize": 14
          }
        },
        "opacity": {"value": 0.75},
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "GDP_per_capita", "type": "quantitative", "title": "GDP (Int$)", "format": ",.2s"},
          {"field": "Life_expectancy", "type": "quantitative", "title": "Life Expectancy (Years)", "format": ".0f"},
          {"field": "Population", "type": "quantitative", "title": "Population", "format": ",.2s"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "condition":{
              "test": "datum['Entity'] == 'Chile' || datum['Entity'] == 'Brazil' || datum['Entity'] == 'China' || datum['Entity'] == 'Malaysia' || datum['Entity'] == 'India' || datum['Entity'] == 'Japan' || datum['Entity'] == 'Kenya' || datum['Entity'] == 'Norway' || datum['Entity'] == 'Australia' || datum['Entity'] == 'Russia' || datum['Entity'] == 'Qatar' || datum['Entity'] == 'Central African Republic' || datum['Entity'] == 'Chad' || datum['Entity'] == 'Palestine' || datum['Entity'] == 'Niger' || datum['Entity'] == 'South Africa' || datum['Entity'] == 'United States'",
              "field": "Entity", 
              "type": "nominal"
          }
      },
        "color": {"value": "black"},
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "GDP_per_capita", "type": "quantitative", "title": "GDP (Int$)", "format": ",.2s"},
          {"field": "Life_expectancy", "type": "quantitative", "title": "Life Expectancy (Years)", "format": ".0f"},
          {"field": "Population_in_millions", "type": "quantitative", "title": "Population", "format": ",.2s"}
        ]
      }
    }
  ]
}